<div class="subject">
    <div class="back-list">
        <%= link_to('BACK TO LIST', '/subject', :class => 'btn')%>
    </div>
    <div class="subject delete">
        <h1>Delete Subject</h1>
        <%# <%= form_with(model: @subject, url: subject_path(@subject), method: "post") do |f| %>
        <%= form_for @subject, url: subject_path(@subject), method: :delete do |f| %>
            <p>Are you sure you want to delete this page</p>
            <p class="reference-name"><%= @subject.name%></p>
            <div class = "form_buttons">
                <%= f.submit("Delete Subject")%>
            </div>
        <%end%>
    </div>
</div>

<%= stylesheet_link_tag "subject" %>