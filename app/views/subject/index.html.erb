<div class="subject index">
    <h1 class="view-title">
        Subjects
    </h1>

    <div class="back-list add-btn">
        <%= link_to("Add new Subject", "subject/new", :class => 'btn')%>
    </div>

    <table class="listing" summary="Subject list">
        <tr class="header">
            <th>#</th>
            <th>Subject</th>
            <th>Visible</th>
            <%# <th>Pages</th> %>
            <th>Acton</th>
        </tr>
        <% @subjects.each do |subject| %>
        <tr>
            <td><%= subject.postition%></td>
            <td><%= subject.name%></td>
            <td class="center"><%= subject.visible ? 'Yes' : 'No'%></td>
            <%# <td class="center"><%= subject.page ? subject.page.size : 0 %>
            <%# </td> %>
            <td class="action">
                <%= link_to('Show', subject_path(subject.id), :class=> 'btn')%>
                <%= link_to('Edit', edit_subject_path(subject.id), :class=> 'btn')%>
                <%= link_to('Delete', delete_subject_path(subject.id), :class=> 'btn')%>
            </td>
        </tr>
        <% end %>
    </table>
</div>

<%= stylesheet_link_tag "subject" %>