<div class="subject">
    <div class="back-list">
        <%= link_to('BACK TO LIST', '/subject', :class => 'btn')%>
    </div>

    <div class="subject-detail view">
        <h1 class="view-title">Show Subject</h1>
        <table>
            <tr>
                <th>Name</th>
                <td><%= @subject.name%></td>
            </tr>
            <tr>
                <th>Position</th>
                <td><%= @subject.postition%></td>
            </tr>
            <tr>
                <th>Visible</th>
                <td><%= @subject.visible ? 'Yes' : 'No'%></td>
            </tr>
            <tr>
                <th>Created</th>
                <td><%= @subject.created_at%></td>
            </tr>
            <tr>
                <th>Updated</th>
                <td><%= @subject.updated_at%></td>
            </tr>
        </table>
    </div>
</div>

<%= stylesheet_link_tag "subject" %>
